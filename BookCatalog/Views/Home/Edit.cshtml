@model BookCatalog.Models.BookModel.EditBookViewModel

<section class="edit-book-section">
    <div class="container">
        <h2 class="text-center">Редактиране на книга</h2>
        
        <div class="edit-book-form">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="BookId" />

                <div class="form-group">
                    <label asp-for="Title" class="form-label">Заглавие</label>
                    <input asp-for="Title" class="form-control" placeholder="Въведете заглавие">
                </div>

                <div class="form-group">
                    <label asp-for="GenreId" class="form-label">Жанр</label>
                    <select asp-for="GenreId" asp-items="ViewBag.GenreId" class="form-select"></select>
                </div>

                <div class="button-group">
                    <input type="submit" value="Запази" class="btn btn-success">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Отказ</a>
                </div>
            </form>
        </div>
    </div>
</section>